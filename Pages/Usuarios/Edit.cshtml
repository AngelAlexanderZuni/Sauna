@page
@model ProyectoSaunaKalixto.Web.Pages.Usuarios.EditModel
@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "_LayoutSidebar";
}

<div class="flex-1 overflow-hidden">
    <div class="px-6 py-6">
    <div class="max-w-2xl mx-auto">
        <div class="mb-6">
            <h1 class="text-3xl font-bold text-foreground mb-2">Editar Usuario</h1>
            <p class="text-muted-foreground">Actualiza la información del usuario</p>
        </div>

        <div class="bg-card rounded-xl shadow-lg overflow-hidden border border-border">
            <form method="post" class="p-6 space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-destructive text-sm"></div>
                
                <input type="hidden" asp-for="Usuario.NombreUsuario" />

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Usuario.NombreUsuario" class="block text-sm font-medium text-foreground mb-1"></label>
                        <input asp-for="Usuario.NombreUsuario" class="w-full px-3 py-2 border border-input rounded-lg bg-muted/50" readonly />
                        <span asp-validation-for="Usuario.NombreUsuario" class="text-destructive text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Usuario.Correo" class="block text-sm font-medium text-foreground mb-1"></label>
                        <input asp-for="Usuario.Correo" type="email" class="w-full px-3 py-2 border border-input rounded-lg focus:ring-2 focus:ring-ring focus:border-transparent bg-background text-foreground" />
                        <span asp-validation-for="Usuario.Correo" class="text-destructive text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Usuario.IdRol" class="block text-sm font-medium text-foreground mb-1"></label>
                        <select asp-for="Usuario.IdRol" asp-items="Model.Roles" class="w-full px-3 py-2 border border-input rounded-lg focus:ring-2 focus:ring-ring focus:border-transparent bg-background text-foreground">
                            <option value="">Seleccionar rol...</option>
                        </select>
                        <span asp-validation-for="Usuario.IdRol" class="text-destructive text-sm"></span>
                    </div>

                    <div class="flex items-center">
                        <input asp-for="Usuario.Activo" class="h-4 w-4 text-primary focus:ring-primary border-input rounded" />
                        <label asp-for="Usuario.Activo" class="ml-2 block text-sm text-foreground">Usuario activo</label>
                    </div>
                </div>

                <div class="border-t border-border pt-6">
                    <div class="flex items-center mb-4">
                        <input type="checkbox" id="cambiarContrasenia" name="Usuario.CambiarContrasenia" value="true" class="h-4 w-4 text-primary focus:ring-primary border-input rounded" />
                        <label for="cambiarContrasenia" class="ml-2 block text-sm text-foreground">Cambiar contraseña</label>
                    </div>

                    <div id="nuevaContraseniaDiv" class="hidden">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label asp-for="Usuario.NuevaContrasenia" class="block text-sm font-medium text-foreground mb-1"></label>
                                <input asp-for="Usuario.NuevaContrasenia" type="password" class="w-full px-3 py-2 border border-input rounded-lg focus:ring-2 focus:ring-ring focus:border-transparent bg-background text-foreground" />
                                <span asp-validation-for="Usuario.NuevaContrasenia" class="text-destructive text-sm"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="flex items-center justify-end space-x-3 pt-6 border-t border-border">
                    <a asp-page="./Index" class="px-4 py-2 text-sm font-medium text-secondary-foreground bg-secondary rounded-lg hover:bg-secondary/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-ring transition-colors">
                        Cancelar
                    </a>
                    <button type="submit" class="px-4 py-2 bg-primary text-primary-foreground text-sm font-medium rounded-lg hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-ring transition-colors">
                        Actualizar Usuario
                    </button>
                </div>
            </form>
        </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('cambiarContrasenia').addEventListener('change', function() {
            var div = document.getElementById('nuevaContraseniaDiv');
            if (this.checked) {
                div.classList.remove('hidden');
            } else {
                div.classList.add('hidden');
            }
        });
    </script>
}