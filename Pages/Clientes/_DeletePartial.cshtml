@model ProyectoSaunaKalixto.Web.Pages.Clientes.DeleteModel

<form method="post" asp-route-id="@Model.Cliente.ClienteID">
    <!-- Modal Header -->
    <div class="modal-header">
        <h3 class="text-lg font-semibold" style="color: var(--foreground);">
            Desactivar Cliente
        </h3>
        <button type="button" onclick="Modal.close('crudModal')" class="modal-close-btn">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
    </div>

    <!-- Modal Body -->
    <div class="modal-body">
        <div class="p-4 rounded-md mb-4" style="background-color: oklch(from var(--destructive) l c h / 0.1); border: 1px solid var(--destructive);">
            <div class="flex items-start gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 flex-shrink-0" style="color: var(--destructive);" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <div>
                    <h4 class="font-medium mb-1" style="color: var(--destructive);">¿Desactivar este cliente?</h4>
                    <p class="text-sm" style="color: var(--foreground);">
                        <strong>Eliminación Lógica:</strong> El cliente será desactivado pero NO se eliminará de la base de datos.
                        Los datos se conservan para reportes, análisis y auditoría.
                    </p>
                    <p class="text-sm mt-2" style="color: var(--muted-foreground);">
                        ℹ️ Puedes reactivar este cliente más tarde desde la vista de "Clientes Inactivos".
                    </p>
                </div>
            </div>
        </div>

        <div class="space-y-3">
            <div class="grid grid-cols-2 gap-2 text-sm">
                <div>
                    <span class="font-medium" style="color: var(--muted-foreground);">Nombre:</span>
                </div>
                <div style="color: var(--foreground);">
                    @Model.Cliente.Nombre @Model.Cliente.Apellido
                </div>
            </div>

            <div class="grid grid-cols-2 gap-2 text-sm">
                <div>
                    <span class="font-medium" style="color: var(--muted-foreground);">Documento:</span>
                </div>
                <div style="color: var(--foreground);">
                    @Model.Cliente.NumeroDocumento
                </div>
            </div>

            <div class="grid grid-cols-2 gap-2 text-sm">
                <div>
                    <span class="font-medium" style="color: var(--muted-foreground);">Correo:</span>
                </div>
                <div style="color: var(--foreground);">
                    @(string.IsNullOrEmpty(Model.Cliente.Correo) ? "No registrado" : Model.Cliente.Correo)
                </div>
            </div>

            <div class="grid grid-cols-2 gap-2 text-sm">
                <div>
                    <span class="font-medium" style="color: var(--muted-foreground);">Fecha de Nacimiento:</span>
                </div>
                <div style="color: var(--foreground);">
                    @(Model.Cliente.FechaNacimiento.HasValue ? Model.Cliente.FechaNacimiento.Value.ToString("dd/MM/yyyy") : "No registrado")
                </div>
            </div>

            <div class="grid grid-cols-2 gap-2 text-sm">
                <div>
                    <span class="font-medium" style="color: var(--muted-foreground);">Programa:</span>
                </div>
                <div style="color: var(--foreground);">
                    Fidelización Automático
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Footer -->
    <div class="modal-footer">
        <button type="button" onclick="Modal.close('crudModal')" 
                class="px-4 py-2 text-sm font-medium rounded-md transition-colors" 
                style="border: 1px solid var(--border); color: var(--foreground);">
            Cancelar
        </button>
        <button type="submit" 
                class="px-4 py-2 text-sm font-medium rounded-md transition-colors text-white" 
                style="background-color: var(--destructive);">
            Desactivar Cliente
        </button>
    </div>
</form>
