@model ProyectoSaunaKalixto.Web.Pages.Clientes.CreateModel

<!-- Modal Header -->
<div class="modal-header">
    <div class="flex items-center justify-between">
        <div>
            <h2 class="text-lg font-semibold" style="color: var(--foreground);">Nuevo Cliente</h2>
            <p class="text-sm mt-1" style="color: var(--muted-foreground);">Registra un nuevo cliente en el sistema</p>
        </div>
        <button type="button" onclick="Modal.close('crudModal')" class="p-2 rounded-md hover:bg-muted transition-colors">
            <svg class="h-5 w-5" style="color: var(--muted-foreground);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
    </div>
</div>

<!-- Modal Body -->
<form method="post" asp-page="./Create">
    <div class="modal-body">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <!-- Nombre -->
            <div>
                <label asp-for="Cliente.Nombre" class="block text-sm font-medium mb-1" style="color: var(--foreground);">
                    Nombre <span style="color: var(--destructive);">*</span>
                </label>
                <input asp-for="Cliente.Nombre" 
                       class="w-full px-3 py-2 text-sm border rounded-md" 
                       style="border-color: var(--border); background-color: var(--background); color: var(--foreground);"
                       required
                       minlength="2"
                       maxlength="50"
                       pattern="[A-Za-zÁÉÍÓÚáéíóúñÑüÜ]+(\s[A-Za-zÁÉÍÓÚáéíóúñÑüÜ]+)*"
                       title="Solo se permiten letras y espacios (mínimo 2 caracteres)"
                       onmousedown="event.stopPropagation()"
                       onclick="event.stopPropagation()" />
                <span asp-validation-for="Cliente.Nombre" class="text-xs" style="color: var(--destructive);"></span>
            </div>

            <!-- Apellidos -->
            <div>
                <label asp-for="Cliente.Apellido" class="block text-sm font-medium mb-1" style="color: var(--foreground);">
                    Apellidos <span style="color: var(--destructive);">*</span>
                </label>
                <input asp-for="Cliente.Apellido" 
                       class="w-full px-3 py-2 text-sm border rounded-md" 
                       style="border-color: var(--border); background-color: var(--background); color: var(--foreground);"
                       required
                       minlength="2"
                       maxlength="50"
                       pattern="[A-Za-zÁÉÍÓÚáéíóúñÑüÜ]+(\s[A-Za-zÁÉÍÓÚáéíóúñÑüÜ]+)*"
                       title="Solo se permiten letras y espacios (mínimo 2 caracteres)"
                       onmousedown="event.stopPropagation()"
                       onclick="event.stopPropagation()" />
                <span asp-validation-for="Cliente.Apellido" class="text-xs" style="color: var(--destructive);"></span>
            </div>

            <!-- DNI (Perú: 8 dígitos numéricos) -->
            <div>
                <label asp-for="Cliente.NumeroDocumento" class="block text-sm font-medium mb-1" style="color: var(--foreground);">
                    DNI <span style="color: var(--destructive);">*</span>
                </label>
                <input asp-for="Cliente.NumeroDocumento" 
                       type="text"
                       class="w-full px-3 py-2 text-sm border rounded-md" 
                       style="border-color: var(--border); background-color: var(--background); color: var(--foreground);"
                       required
                       minlength="8"
                       maxlength="8"
                       pattern="\d{8}"
                       placeholder="12345678"
                       title="DNI debe tener exactamente 8 números"
                       onmousedown="event.stopPropagation()"
                       onclick="event.stopPropagation()" />
                <span asp-validation-for="Cliente.NumeroDocumento" class="text-xs" style="color: var(--destructive);"></span>
                <p class="text-xs mt-1" style="color: var(--muted-foreground);">Formato Perú: 8 dígitos numéricos</p>
            </div>

            <!-- Teléfono Celular (Perú: 9 dígitos) -->
            <div>
                <label asp-for="Cliente.Telefono" class="block text-sm font-medium mb-1" style="color: var(--foreground);">
                    Teléfono Celular
                </label>
                <input asp-for="Cliente.Telefono" 
                       type="tel"
                       class="w-full px-3 py-2 text-sm border rounded-md" 
                       style="border-color: var(--border); background-color: var(--background); color: var(--foreground);"
                       minlength="9"
                       maxlength="9"
                       pattern="\d{9}"
                       placeholder="987654321"
                       title="Celular debe tener exactamente 9 números"
                       onmousedown="event.stopPropagation()"
                       onclick="event.stopPropagation()" />
                <span asp-validation-for="Cliente.Telefono" class="text-xs" style="color: var(--destructive);"></span>
                <p class="text-xs mt-1" style="color: var(--muted-foreground);">Formato Perú: 9 dígitos (celulares)</p>
            </div>

            <!-- Correo -->
            <div class="md:col-span-2">
                <label asp-for="Cliente.Correo" class="block text-sm font-medium mb-1" style="color: var(--foreground);">
                    Correo Electrónico
                </label>
                <input asp-for="Cliente.Correo" 
                       type="email" 
                       class="w-full px-3 py-2 text-sm border rounded-md" 
                       style="border-color: var(--border); background-color: var(--background); color: var(--foreground);"
                       maxlength="100"
                       placeholder="ejemplo@correo.com"
                       onmousedown="event.stopPropagation()"
                       onclick="event.stopPropagation()" />
                <span asp-validation-for="Cliente.Correo" class="text-xs" style="color: var(--destructive);"></span>
            </div>

            <!-- Dirección -->
            <div class="md:col-span-2">
                <label asp-for="Cliente.Direccion" class="block text-sm font-medium mb-1" style="color: var(--foreground);">
                    Dirección
                </label>
                <input asp-for="Cliente.Direccion" 
                       class="w-full px-3 py-2 text-sm border rounded-md" 
                       style="border-color: var(--border); background-color: var(--background); color: var(--foreground);"
                       maxlength="200"
                       onmousedown="event.stopPropagation()"
                       onclick="event.stopPropagation()" />
                <span asp-validation-for="Cliente.Direccion" class="text-xs" style="color: var(--destructive);"></span>
            </div>

            <!-- Fecha de Nacimiento -->
            <div class="md:col-span-2">
                <label asp-for="Cliente.FechaNacimiento" class="block text-sm font-medium mb-1" style="color: var(--foreground);">
                    Fecha de Nacimiento <span style="color: var(--destructive);">*</span>
                </label>
                <input asp-for="Cliente.FechaNacimiento" 
                       type="date" 
                       class="w-full px-3 py-2 text-sm border rounded-md" 
                       style="border-color: var(--border); background-color: var(--background); color: var(--foreground);"
                       required
                       max="@DateTime.Now.ToString("yyyy-MM-dd")"
                       onmousedown="event.stopPropagation()"
                       onclick="event.stopPropagation()" />
                <span asp-validation-for="Cliente.FechaNacimiento" class="text-xs" style="color: var(--destructive);"></span>
                <p class="text-xs mt-1" style="color: var(--muted-foreground);">
                    <strong>Obligatorio:</strong> Requerida para descuento de cumpleaños (S/.5.00) del Programa de Fidelización
                </p>
            </div>
        </div>

        <p class="text-xs mt-4" style="color: var(--muted-foreground);">
            <span style="color: var(--destructive);">*</span> Campos obligatorios
        </p>
    </div>

    <!-- Modal Footer -->
    <div class="modal-footer">
        <button type="button" onclick="Modal.close('crudModal')" 
                class="px-4 py-2 text-sm font-medium rounded-md transition-colors" 
                style="border: 1px solid var(--border); color: var(--foreground);">
            Cancelar
        </button>
        <button type="submit" 
                class="px-4 py-2 text-sm font-medium rounded-md transition-colors text-white" 
                style="background-color: var(--primary);">
            Guardar Cliente
        </button>
    </div>
</form>
