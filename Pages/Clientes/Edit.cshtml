@page
@model ProyectoSaunaKalixto.Web.Pages.Clientes.EditModel
@{
    ViewData["Title"] = "Editar Cliente";
    Layout = "_LayoutSidebar";
}

<div class="flex-1 overflow-hidden">
    <div class="px-6 py-6">
    <div class="max-w-2xl mx-auto">
        <div class="mb-6">
            <h1 class="text-3xl font-bold text-foreground mb-2">Editar Cliente</h1>
            <p class="text-muted-foreground">Actualiza la información del cliente</p>
        </div>

        <div class="bg-card rounded-xl shadow-lg overflow-hidden border border-border">
            <form method="post" class="p-6 space-y-6">
                <input type="hidden" asp-for="Cliente.ClienteID" />

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Cliente.NumeroDocumento" class="block text-sm font-medium text-foreground mb-1"></label>
                        <input asp-for="Cliente.NumeroDocumento" class="w-full px-3 py-2 border border-input rounded-lg focus:ring-2 focus:ring-ring focus:border-transparent bg-background text-foreground" />
                        <span asp-validation-for="Cliente.NumeroDocumento" class="text-destructive text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Cliente.Nombre" class="block text-sm font-medium text-foreground mb-1"></label>
                        <input asp-for="Cliente.Nombre" class="w-full px-3 py-2 border border-input rounded-lg focus:ring-2 focus:ring-ring focus:border-transparent bg-background text-foreground" />
                        <span asp-validation-for="Cliente.Nombre" class="text-destructive text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Cliente.Apellido" class="block text-sm font-medium text-foreground mb-1"></label>
                        <input asp-for="Cliente.Apellido" class="w-full px-3 py-2 border border-input rounded-lg focus:ring-2 focus:ring-ring focus:border-transparent bg-background text-foreground" />
                        <span asp-validation-for="Cliente.Apellido" class="text-destructive text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Cliente.Telefono" class="block text-sm font-medium text-foreground mb-1"></label>
                        <input asp-for="Cliente.Telefono" class="w-full px-3 py-2 border border-input rounded-lg focus:ring-2 focus:ring-ring focus:border-transparent bg-background text-foreground" />
                        <span asp-validation-for="Cliente.Telefono" class="text-destructive text-sm"></span>
                    </div>

                    <div class="md:col-span-2">
                        <label asp-for="Cliente.Correo" class="block text-sm font-medium text-foreground mb-1"></label>
                        <input asp-for="Cliente.Correo" class="w-full px-3 py-2 border border-input rounded-lg focus:ring-2 focus:ring-ring focus:border-transparent bg-background text-foreground" />
                        <span asp-validation-for="Cliente.Correo" class="text-destructive text-sm"></span>
                    </div>

                    <div class="md:col-span-2">
                        <label asp-for="Cliente.Direccion" class="block text-sm font-medium text-foreground mb-1"></label>
                        <input asp-for="Cliente.Direccion" class="w-full px-3 py-2 border border-input rounded-lg focus:ring-2 focus:ring-ring focus:border-transparent bg-background text-foreground" />
                        <span asp-validation-for="Cliente.Direccion" class="text-destructive text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Cliente.FechaNacimiento" class="block text-sm font-medium text-foreground mb-1"></label>
                        <input asp-for="Cliente.FechaNacimiento" type="date" class="w-full px-3 py-2 border border-input rounded-lg focus:ring-2 focus:ring-ring focus:border-transparent bg-background text-foreground" />
                        <span asp-validation-for="Cliente.FechaNacimiento" class="text-destructive text-sm"></span>
                        <p class="text-xs mt-1 text-muted-foreground">Para aplicar descuento de cumpleaños (S/.5.00) del Programa de Fidelización</p>
                    </div>

                    <div class="md:col-span-2">
                        <div class="flex items-center">
                            <input asp-for="Cliente.Activo" class="h-4 w-4 text-primary focus:ring-primary border-input rounded" />
                            <label asp-for="Cliente.Activo" class="ml-2 block text-sm text-foreground"></label>
                        </div>
                    </div>
                </div>

                <div class="flex items-center justify-end space-x-3 pt-6 border-t border-border">
                    <a asp-page="./Index" class="px-4 py-2 text-sm font-medium text-secondary-foreground bg-secondary rounded-lg hover:bg-secondary/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-ring transition-colors">
                        Cancelar
                    </a>
                    <button type="submit" class="px-6 py-2 text-sm font-medium text-primary-foreground bg-primary rounded-lg hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-ring transition-colors">
                        Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}