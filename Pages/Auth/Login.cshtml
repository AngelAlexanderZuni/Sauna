@page
@model ProyectoSaunaKalixto.Web.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Iniciar Sesi√≥n - Sauna Kalixto";
    Layout = "_LayoutSimple";
}

<style>
    /* ============================================
       VARIABLES DE DISE√ëO PROFESIONAL
       ============================================ */
    :root {
        /* Paleta Principal */
        --primary-blue: #2563eb;
        --primary-blue-dark: #1e40af;
        --primary-blue-light: #3b82f6;
        --secondary-purple: #7c3aed;
        --secondary-purple-dark: #6d28d9;
        --accent-cyan: #06b6d4;
        --accent-emerald: #10b981;
        --accent-amber: #f59e0b;
        
        /* Colores de Estado */
        --success-green: #059669;
        --success-light: #10b981;
        --error-red: #dc2626;
        --warning-amber: #d97706;
        
        /* Fondos */
        --bg-white: #ffffff;
        --bg-slate: #f8fafc;
        --bg-glass: rgba(255, 255, 255, 0.7);
        --bg-glass-strong: rgba(255, 255, 255, 0.85);
        
        /* Textos */
        --text-primary: #0f172a;
        --text-secondary: #475569;
        --text-muted: #64748b;
        --text-light: #94a3b8;
        
        /* Bordes y Sombras */
        --border-light: rgba(148, 163, 184, 0.2);
        --border-color: rgba(148, 163, 184, 0.3);
        --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.08);
        --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.12);
        --shadow-xl: 0 16px 48px rgba(0, 0, 0, 0.16);
        
        /* Efectos de Brillo */
        --glow-blue: rgba(37, 99, 235, 0.4);
        --glow-purple: rgba(124, 58, 237, 0.4);
        --glow-cyan: rgba(6, 182, 212, 0.4);
        --glow-green: rgba(16, 185, 129, 0.4);
    }

    /* ============================================
       RESET Y BASE
       ============================================ */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    /* ============================================
       ANIMACIONES MODERNAS
       ============================================ */
    @@keyframes meshGradient {
        0%, 100% { 
            background-position: 0% 50%, 100% 50%, 50% 100%, 50% 0%;
        }
        25% { 
            background-position: 50% 25%, 75% 75%, 25% 75%, 75% 25%;
        }
        50% { 
            background-position: 100% 50%, 0% 50%, 50% 0%, 50% 100%;
        }
        75% { 
            background-position: 75% 75%, 25% 25%, 75% 25%, 25% 75%;
        }
    }

    @@keyframes floatSmooth {
        0%, 100% { 
            transform: translate3d(0, 0, 0) rotate(0deg);
        }
        25% { 
            transform: translate3d(15px, -15px, 10px) rotate(2deg);
        }
        50% { 
            transform: translate3d(0, -25px, 20px) rotate(0deg);
        }
        75% { 
            transform: translate3d(-15px, -15px, 10px) rotate(-2deg);
        }
    }

    @@keyframes particleOrbit {
        0% {
            transform: rotate(0deg) translateX(120px) rotate(0deg);
            opacity: 0;
        }
        10%, 90% {
            opacity: 1;
        }
        100% {
            transform: rotate(360deg) translateX(120px) rotate(-360deg);
            opacity: 0;
        }
    }

    @@keyframes glowPulse {
        0%, 100% { 
            filter: drop-shadow(0 0 12px var(--glow-blue));
        }
        50% { 
            filter: drop-shadow(0 0 24px var(--glow-blue));
        }
    }

    @@keyframes shimmer {
        0% {
            background-position: -200% center;
        }
        100% {
            background-position: 200% center;
        }
    }

    @@keyframes morphBlob {
        0%, 100% { 
            border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
            transform: rotate(0deg) scale(1);
        }
        33% { 
            border-radius: 30% 60% 70% 40% / 50% 60% 30% 60%;
            transform: rotate(120deg) scale(1.05);
        }
        66% { 
            border-radius: 40% 60% 60% 40% / 60% 40% 60% 40%;
            transform: rotate(240deg) scale(0.95);
        }
    }

    @@keyframes slideIn {
        0% {
            opacity: 0;
            transform: translateY(30px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInBlur {
        0% {
            opacity: 0;
            filter: blur(10px);
        }
        100% {
            opacity: 1;
            filter: blur(0);
        }
    }

    @@keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    /* ============================================
       LAYOUT PRINCIPAL
       ============================================ */
    .main-container {
        min-height: 100vh;
        display: flex;
        perspective: 2000px;
        position: relative;
        overflow: hidden;
        background: var(--bg-slate);
        padding: 1rem;
    }

    /* ============================================
       FONDOS ANIMADOS
       ============================================ */
    .animated-background {
        position: absolute;
        inset: 0;
        background: 
            radial-gradient(circle at 15% 20%, rgba(37, 99, 235, 0.12) 0%, transparent 40%),
            radial-gradient(circle at 85% 80%, rgba(124, 58, 237, 0.10) 0%, transparent 40%),
            radial-gradient(circle at 50% 50%, rgba(6, 182, 212, 0.08) 0%, transparent 40%),
            radial-gradient(circle at 80% 20%, rgba(16, 185, 129, 0.06) 0%, transparent 40%);
        background-size: 250% 250%;
        animation: meshGradient 25s ease infinite;
    }

    .blob-container {
        position: absolute;
        inset: 0;
        pointer-events: none;
        overflow: hidden;
    }

    .floating-blob {
        position: absolute;
        filter: blur(80px);
        opacity: 0.6;
        animation: morphBlob 18s ease-in-out infinite, floatSmooth 22s ease-in-out infinite;
    }

    .blob-blue {
        width: 450px;
        height: 450px;
        top: -10%;
        left: -10%;
        background: linear-gradient(135deg, rgba(37, 99, 235, 0.2), rgba(59, 130, 246, 0.15));
        animation-delay: 0s;
    }

    .blob-purple {
        width: 400px;
        height: 400px;
        bottom: -10%;
        right: -10%;
        background: linear-gradient(135deg, rgba(124, 58, 237, 0.2), rgba(139, 92, 246, 0.15));
        animation-delay: 6s;
    }

    .blob-cyan {
        width: 350px;
        height: 350px;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: linear-gradient(135deg, rgba(6, 182, 212, 0.15), rgba(34, 211, 238, 0.1));
        animation-delay: 12s;
    }

    .grid-overlay {
        position: absolute;
        inset: 0;
        background-image: 
            linear-gradient(rgba(148, 163, 184, 0.04) 1px, transparent 1px),
            linear-gradient(90deg, rgba(148, 163, 184, 0.04) 1px, transparent 1px);
        background-size: 50px 50px;
        mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);
    }

    .particle-system {
        position: absolute;
        inset: 0;
        pointer-events: none;
    }

    .particle {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 6px;
        height: 6px;
        border-radius: 50%;
        animation: particleOrbit linear infinite;
    }

    .particle-blue {
        background: linear-gradient(135deg, var(--primary-blue), var(--primary-blue-light));
        box-shadow: 0 0 15px var(--glow-blue);
        animation-duration: 16s;
    }

    .particle-purple {
        background: linear-gradient(135deg, var(--secondary-purple), var(--secondary-purple-dark));
        box-shadow: 0 0 15px var(--glow-purple);
        animation-duration: 20s;
    }

    .particle-cyan {
        background: linear-gradient(135deg, var(--accent-cyan), #22d3ee);
        box-shadow: 0 0 15px var(--glow-cyan);
        animation-duration: 24s;
    }

    /* ============================================
       PANEL IZQUIERDO (BRAND)
       ============================================ */
    .brand-section {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 2.5rem;
        position: relative;
        z-index: 1;
    }

    .brand-content {
        animation: slideIn 0.8s ease-out;
    }

    /* Logo */
    .logo-container {
        display: inline-flex;
        align-items: center;
        gap: 0.875rem;
        padding: 0.75rem 1.5rem 0.75rem 0.75rem;
        background: var(--bg-glass-strong);
        backdrop-filter: blur(20px) saturate(180%);
        border: 2px solid var(--border-light);
        border-radius: 1.25rem;
        box-shadow: var(--shadow-md), inset 0 1px 0 rgba(255, 255, 255, 0.6);
        margin-bottom: 2.5rem;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        position: relative;
        overflow: hidden;
    }

    .logo-container::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, transparent, rgba(37, 99, 235, 0.1), transparent);
        transform: translateX(-100%);
        transition: transform 0.6s ease;
    }

    .logo-container:hover::before {
        transform: translateX(100%);
    }

    .logo-container:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg), 0 0 30px var(--glow-blue);
    }

    .logo-icon {
        width: 3rem;
        height: 3rem;
        background: linear-gradient(135deg, var(--primary-blue), var(--secondary-purple));
        border-radius: 0.875rem;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        box-shadow: var(--shadow-md);
        transition: transform 0.4s ease;
    }

    .logo-container:hover .logo-icon {
        transform: scale(1.1) rotate(-5deg);
    }

    .logo-text {
        font-size: 1.25rem;
        font-weight: 900;
        background: linear-gradient(135deg, var(--primary-blue), var(--secondary-purple));
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: -0.02em;
    }

    /* Contenido Principal */
    .main-content {
        max-width: 580px;
    }

    .main-title {
        font-size: 2.75rem;
        font-weight: 900;
        line-height: 1.1;
        color: var(--text-primary);
        margin-bottom: 1rem;
        letter-spacing: -0.03em;
    }

    .gradient-text {
        background: linear-gradient(135deg, var(--primary-blue) 0%, var(--secondary-purple) 50%, var(--accent-cyan) 100%);
        background-size: 200% auto;
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: shimmer 3s linear infinite;
    }

    .main-subtitle {
        font-size: 1rem;
        line-height: 1.6;
        color: var(--text-secondary);
        margin-bottom: 2rem;
    }

    /* Feature Cards */
    .features-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .feature-card {
        padding: 1.5rem;
        background: var(--bg-glass-strong);
        backdrop-filter: blur(20px) saturate(180%);
        border: 2px solid var(--border-light);
        border-radius: 1.25rem;
        box-shadow: var(--shadow-md);
        cursor: pointer;
        position: relative;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        animation: fadeInBlur 0.6s ease-out;
    }

    .feature-card:nth-child(1) { animation-delay: 0.1s; }
    .feature-card:nth-child(2) { animation-delay: 0.2s; }
    .feature-card:nth-child(3) { animation-delay: 0.3s; }
    .feature-card:nth-child(4) { animation-delay: 0.4s; }

    .feature-card::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        border-radius: 50%;
        background: radial-gradient(circle, rgba(37, 99, 235, 0.15), transparent 70%);
        transform: translate(-50%, -50%);
        transition: all 0.6s ease;
    }

    .feature-card:hover::before {
        width: 400px;
        height: 400px;
    }

    .feature-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-xl);
        border-color: var(--primary-blue-light);
    }

    .feature-icon {
        width: 3rem;
        height: 3rem;
        background: linear-gradient(135deg, rgba(37, 99, 235, 0.1), rgba(124, 58, 237, 0.1));
        border-radius: 0.875rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        transition: all 0.4s ease;
        position: relative;
        z-index: 1;
    }

    .feature-card:hover .feature-icon {
        background: linear-gradient(135deg, var(--primary-blue), var(--secondary-purple));
        transform: scale(1.15) rotate(-8deg);
    }

    .feature-icon svg {
        width: 1.5rem;
        height: 1.5rem;
        color: var(--primary-blue);
        transition: color 0.3s ease;
    }

    .feature-card:hover .feature-icon svg {
        color: white;
    }

    .feature-title {
        font-size: 1rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.375rem;
    }

    .feature-description {
        font-size: 0.875rem;
        color: var(--text-muted);
        line-height: 1.5;
    }

    /* Stats Section */
    .stats-container {
        display: flex;
        gap: 1.5rem;
        padding: 1.5rem;
        background: var(--bg-glass-strong);
        backdrop-filter: blur(20px) saturate(180%);
        border: 2px solid var(--border-light);
        border-radius: 1.25rem;
        box-shadow: var(--shadow-md);
        position: relative;
        overflow: hidden;
        cursor: pointer;
        transition: all 0.4s ease;
        animation: fadeInBlur 0.8s ease-out 0.5s both;
    }

    .stats-container::before {
        content: '';
        position: absolute;
        top: 50%;
        left: -100%;
        width: 100%;
        height: 200%;
        background: linear-gradient(90deg, transparent, rgba(124, 58, 237, 0.1), transparent);
        transform: translateY(-50%);
        transition: left 0.8s ease;
    }

    .stats-container:hover::before {
        left: 100%;
    }

    .stats-container:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg), 0 0 30px var(--glow-purple);
    }

    .stat-item {
        flex: 1;
        text-align: center;
        transition: transform 0.3s ease;
    }

    .stat-item:hover {
        transform: scale(1.1);
    }

    .stat-number {
        font-size: 2rem;
        font-weight: 900;
        background: linear-gradient(135deg, var(--primary-blue), var(--accent-cyan));
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 0.375rem;
        line-height: 1;
    }

    .stat-label {
        font-size: 0.75rem;
        color: var(--text-muted);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .brand-footer {
        color: var(--text-muted);
        font-size: 0.875rem;
        animation: fadeInBlur 0.8s ease-out 0.8s both;
    }

    /* ============================================
       PANEL DERECHO (FORMULARIO)
       ============================================ */
    .form-section {
        width: 520px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2.5rem;
        background: var(--bg-glass);
        backdrop-filter: blur(40px) saturate(180%);
        box-shadow: var(--shadow-xl);
        position: relative;
        z-index: 2;
    }

    .form-section::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        border-radius: 50%;
        background: radial-gradient(circle, rgba(124, 58, 237, 0.08), transparent 70%);
        transform: translate(-50%, -50%);
        pointer-events: none;
        transition: all 0.8s ease;
    }

    .form-section:hover::before {
        width: 800px;
        height: 800px;
    }

    .form-wrapper {
        width: 100%;
        max-width: 420px;
        animation: fadeInBlur 0.8s ease-out 0.4s both;
    }

    /* Badge de Seguridad */
    .security-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.625rem;
        padding: 0.75rem 1.25rem;
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.15), rgba(5, 150, 105, 0.1));
        border: 2px solid rgba(16, 185, 129, 0.4);
        border-radius: 1.75rem;
        font-size: 0.8125rem;
        font-weight: 800;
        color: var(--success-green);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin: 0 auto 2rem;
        box-shadow: var(--shadow-sm), 0 0 20px rgba(16, 185, 129, 0.2);
        position: relative;
        overflow: hidden;
    }

    .security-badge::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(90deg, transparent, rgba(16, 185, 129, 0.3), transparent);
        animation: shimmer 2.5s linear infinite;
    }

    .security-badge svg {
        position: relative;
        z-index: 1;
    }

    .security-badge span {
        position: relative;
        z-index: 1;
    }

    /* Form Header */
    .form-title {
        font-size: 2rem;
        font-weight: 900;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
        letter-spacing: -0.02em;
        text-align: center;
    }

    .form-subtitle {
        font-size: 0.9375rem;
        color: var(--text-secondary);
        margin-bottom: 2rem;
        text-align: center;
    }

    /* Alert */
    .alert-error {
        display: flex;
        align-items: flex-start;
        gap: 0.875rem;
        padding: 1rem 1.25rem;
        background: rgba(239, 68, 68, 0.1);
        backdrop-filter: blur(10px);
        border: 2px solid rgba(239, 68, 68, 0.3);
        border-left: 4px solid var(--error-red);
        border-radius: 0.875rem;
        margin-bottom: 1.5rem;
        box-shadow: var(--shadow-sm);
        animation: slideIn 0.4s ease-out;
    }

    .alert-icon {
        flex-shrink: 0;
        color: var(--error-red);
    }

    .alert-content {
        flex: 1;
    }

    .alert-title {
        font-size: 0.9375rem;
        font-weight: 700;
        color: var(--error-red);
        margin-bottom: 0.25rem;
    }

    .alert-message {
        font-size: 0.875rem;
        color: #991b1b;
        line-height: 1.5;
    }

    /* Form Fields */
    .form-fields {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .form-group {
        position: relative;
    }

    .form-label {
        display: flex;
        align-items: center;
        justify-content: space-between;
        font-size: 0.9375rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.625rem;
    }

    .required-indicator {
        color: var(--accent-emerald);
        font-size: 0.8125rem;
        font-weight: 600;
    }

    .input-container {
        position: relative;
    }

    .form-input {
        width: 100%;
        height: 3.25rem;
        padding: 0 1.125rem 0 3.25rem;
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(10px);
        border: 2px solid var(--border-color);
        border-radius: 0.875rem;
        font-size: 0.9375rem;
        color: var(--text-primary);
        transition: all 0.3s ease;
        outline: none;
        box-shadow: var(--shadow-sm);
    }

    .form-input::placeholder {
        color: var(--text-light);
    }

    .form-input:hover {
        border-color: var(--primary-blue-light);
        background: rgba(255, 255, 255, 0.85);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    .form-input:focus {
        border-color: var(--primary-blue);
        background: rgba(255, 255, 255, 0.95);
        box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1), var(--shadow-md);
        transform: translateY(-2px);
    }

    .input-icon {
        position: absolute;
        left: 1.25rem;
        top: 50%;
        transform: translateY(-50%);
        width: 1.5rem;
        height: 1.5rem;
        color: var(--text-muted);
        pointer-events: none;
        transition: all 0.3s ease;
    }

    .form-input:focus ~ .input-icon {
        color: var(--primary-blue);
        transform: translateY(-50%) scale(1.15);
    }

    .toggle-password {
        position: absolute;
        right: 0.875rem;
        top: 50%;
        transform: translateY(-50%);
        width: 2.5rem;
        height: 2.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.6);
        backdrop-filter: blur(10px);
        border: none;
        border-radius: 0.625rem;
        color: var(--text-muted);
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-sm);
    }

    .toggle-password:hover {
        background: rgba(124, 58, 237, 0.15);
        color: var(--secondary-purple);
        transform: translateY(-50%) scale(1.1);
    }

    .validation-error {
        display: block;
        margin-top: 0.5rem;
        font-size: 0.875rem;
        color: var(--error-red);
        font-weight: 600;
    }

    /* Submit Button */
    .submit-button {
        width: 100%;
        height: 3.5rem;
        margin-top: 1rem;
        background: linear-gradient(135deg, var(--primary-blue), var(--secondary-purple), var(--accent-cyan));
        background-size: 200% 200%;
        border: none;
        border-radius: 0.875rem;
        font-size: 1rem;
        font-weight: 800;
        color: white;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        box-shadow: var(--shadow-md), 0 0 30px rgba(37, 99, 235, 0.3);
        animation: shimmer 3s ease infinite;
    }

    .submit-button::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transform: translateX(-100%) skewX(-15deg);
        transition: transform 0.6s ease;
    }

    .submit-button:hover {
        transform: translateY(-4px) scale(1.02);
        box-shadow: var(--shadow-xl), 0 0 50px rgba(124, 58, 237, 0.5);
    }

    .submit-button:hover::before {
        transform: translateX(100%) skewX(-15deg);
    }

    .submit-button:active {
        transform: translateY(-2px) scale(1);
    }

    .submit-button:disabled {
        opacity: 0.7;
        cursor: not-allowed;
        transform: none !important;
    }

