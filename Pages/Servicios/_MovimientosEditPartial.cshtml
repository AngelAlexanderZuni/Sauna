@model ProyectoSaunaKalixto.Web.Pages.Servicios.MovimientosEditModel

<div class="modal-header">
    <div class="flex items-center justify-between">
        <div>
            <h2 class="text-lg font-semibold" style="color: var(--foreground);">Editar Movimiento</h2>
            <p class="text-sm mt-1" style="color: var(--muted-foreground);">ID @Model.Detalle.IdDetalleServicio Â· Cuenta @Model.Detalle.IdCuenta</p>
        </div>
        <button type="button" onclick="Modal.close('crudModal')" class="p-2 rounded-md hover:bg-muted transition-colors">
            <svg class="h-5 w-5" style="color: var(--muted-foreground);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
    </div>
</div>

<form method="post" asp-page="./MovimientosEdit">
    <div class="modal-body grid grid-cols-1 md:grid-cols-2 gap-4">
        <input asp-for="Detalle.IdDetalleServicio" type="hidden" />
        <input asp-for="Detalle.IdServicio" type="hidden" />
        <input asp-for="Detalle.IdCuenta" type="hidden" />
        <div>
            <label class="block text-sm font-medium mb-1" style="color: var(--foreground);">Cantidad</label>
            <input asp-for="Detalle.Cantidad" type="number" min="1" max="9999" class="w-full px-3 py-2 text-sm border rounded-md" style="border-color: var(--border); background-color: var(--background); color: var(--foreground);" required />
            <span asp-validation-for="Detalle.Cantidad" class="text-xs" style="color: var(--destructive);"></span>
        </div>
        <div>
            <label class="block text-sm font-medium mb-1" style="color: var(--foreground);">Precio Unitario</label>
            <input asp-for="Detalle.PrecioUnitario" type="number" step="0.01" min="0" max="100000" class="w-full px-3 py-2 text-sm border rounded-md" style="border-color: var(--border); background-color: var(--background); color: var(--foreground);" required />
            <span asp-validation-for="Detalle.PrecioUnitario" class="text-xs" style="color: var(--destructive);"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" onclick="Modal.close('crudModal')" class="px-4 py-2 text-sm font-medium rounded-md transition-colors" style="border: 1px solid var(--border); color: var(--foreground);">Cancelar</button>
        <button type="submit" class="px-4 py-2 text-sm font-medium rounded-md transition-colors text-white" style="background-color: var(--primary);">Guardar</button>
    </div>
</form>