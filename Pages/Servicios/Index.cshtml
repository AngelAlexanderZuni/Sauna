@page
@model ProyectoSaunaKalixto.Web.Pages.Servicios.IndexModel
@{
    ViewData["Title"] = "Servicios";
    Layout = "_LayoutSidebar";
}

<div class="flex-1 overflow-auto">
    <div class="p-6">
        <div class="card">
            <div class="border-b px-6 py-4" style="border-color: var(--border);">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="text-lg font-semibold" style="color: var(--foreground);">Gestión de Servicios</h2>
                        <p class="text-sm mt-1" style="color: var(--muted-foreground);">Administra servicios, categorías y estados</p>
                    </div>
                </div>
            </div>

            <div class="px-6 py-4 space-y-6">
                <form method="get" class="grid grid-cols-1 md:grid-cols-7 gap-3 items-center">
                    <input name="Busqueda" value="@Model.Busqueda" oninput="applyFiltersDebounced()" class="px-3 py-2 text-sm border rounded-md" style="border-color: var(--border); background-color: var(--background); color: var(--foreground);" placeholder="Buscar por nombre" />
                    <select name="CategoriaId" onchange="applyFilters()" class="px-3 py-2 text-sm border rounded-md" style="border-color: var(--border); background-color: var(--background); color: var(--foreground);">
                        <option value="">Todas las categorías</option>
                        @foreach (var c in Model.Categorias)
                        {
                            <option value="@c.IdCategoriaServicio" selected="@(Model.CategoriaId == c.IdCategoriaServicio)">@c.Nombre</option>
                        }
                    </select>
                    <input name="PrecioMin" value="@Model.PrecioMin" oninput="applyFiltersDebounced()" type="number" step="0.01" class="px-3 py-2 text-sm border rounded-md" style="border-color: var(--border); background-color: var(--background); color: var(--foreground);" placeholder="Precio min" />
                    <input name="PrecioMax" value="@Model.PrecioMax" oninput="applyFiltersDebounced()" type="number" step="0.01" class="px-3 py-2 text-sm border rounded-md" style="border-color: var(--border); background-color: var(--background); color: var(--foreground);" placeholder="Precio max" />
                    <label class="inline-flex items-center text-sm" style="color: var(--foreground);">
                        <input type="checkbox" name="ShowInactive" value="true" @(Model.ShowInactive ? "checked" : "") onchange="applyFilters()" class="mr-2" /> Mostrar inactivos
                    </label>
                    <div class="flex justify-end">
                        <button type="button" onclick="loadCreateServicioForm()"
                                class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-md text-white transition-colors"
                                style="background-color: var(--primary);">
                            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                            Nuevo Servicio
                        </button>
                    </div>
                </form>

                

                @if (TempData["Error"] != null)
                {
                    <div class="alert-danger">@TempData["Error"]</div>
                }
                @if (TempData["Success"] != null)
                {
                    <div class="alert-success">@TempData["Success"]</div>
                }

                <div id="serviciosTableContainer" class="overflow-x-auto">
                    @await Html.PartialAsync("_TablePartial", Model)
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function mostrarToast(message, type = 'success') {
            const toast = document.createElement('div');
            toast.className = 'fixed top-4 right-4 px-6 py-3 rounded-md shadow-lg z-50 animate-fade-in';
            if (type === 'success') {
                toast.style.backgroundColor = 'var(--primary)';
                toast.style.color = 'white';
                toast.innerHTML = `<div class="flex items-center space-x-2"><svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg><span>${message}</span></div>`;
            } else if (type === 'info') {
                toast.style.backgroundColor = 'var(--muted)';
                toast.style.color = 'var(--foreground)';
                toast.innerHTML = `<div class="flex items-center space-x-2"><svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg><span>${message}</span></div>`;
            } else {
                toast.style.backgroundColor = 'var(--destructive)';
                toast.style.color = 'white';
                toast.innerHTML = `<div class="flex items-center space-x-2"><svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg><span>${message}</span></div>`;
            }
            document.body.appendChild(toast);
            setTimeout(() => { toast.style.opacity = '0'; toast.style.transition = 'opacity 0.3s'; setTimeout(() => toast.remove(), 300); }, 2500);
        }
        function getFilterParams() {
            const q = new URLSearchParams();
            const val = name => document.querySelector(`[name="${name}"]`)?.value;
            const checked = name => document.querySelector(`[name="${name}"]`)?.checked;
            if (val('Busqueda')) q.append('Busqueda', val('Busqueda'));
            if (val('CategoriaId')) q.append('CategoriaId', val('CategoriaId'));
            if (val('PrecioMin')) q.append('PrecioMin', val('PrecioMin'));
            if (val('PrecioMax')) q.append('PrecioMax', val('PrecioMax'));
            if (checked('ShowInactive')) q.append('ShowInactive', 'true'); else q.append('ShowInactive', 'false');
            return q.toString();
        }

        async function applyFilters() {
            try {
                const qs = getFilterParams();
                const response = await fetch(`/Servicios/Index?handler=List&${qs}`);
                const html = await response.text();
                document.getElementById('serviciosTableContainer').innerHTML = html;
            } catch (e) {
                console.error('Error applying filters:', e);
            }
        }

        let filterTimer;
        function applyFiltersDebounced() {
            clearTimeout(filterTimer);
            filterTimer = setTimeout(applyFilters, 250);
        }
        async function loadCreateServicioForm() {
            try {
                const response = await fetch('/Servicios/Create?handler=Modal');
                const html = await response.text();
                document.getElementById('modalContent').innerHTML = html;
                Modal.open('crudModal');
            } catch (error) {
                console.error('Error loading form:', error);
                alert('Error al cargar el formulario');
            }
        }

        async function loadEditServicioForm(id) {
            try {
                const response = await fetch(`/Servicios/Edit?id=${id}&handler=Modal`);
                const html = await response.text();
                document.getElementById('modalContent').innerHTML = html;
                Modal.open('crudModal');
            } catch (error) {
                console.error('Error loading form:', error);
                alert('Error al cargar el formulario');
            }
        }

        // Submit en modales (reutiliza patrón Clientes)
        document.addEventListener('submit', async function(e) {
            if (e.target.closest('.modal-content')) {
                e.preventDefault();
                const form = e.target;
                const formData = new FormData(form);
                try {
                    const response = await fetch(form.action, { method: form.method, body: formData, headers: { 'X-Requested-With': 'XMLHttpRequest' } });
                    if (response.ok) {
                        const ct = response.headers.get('content-type') || '';
                        if (ct.includes('application/json')) {
                            const result = await response.json();
                            if (result.success) {
                                mostrarToast(result.message || 'Operación realizada', 'success');
                                Modal.close('crudModal');
                                if (result.serviceId) {
                                    loadServicioMovimientos(result.serviceId);
                                } else {
                                    applyFilters();
                                }
                            } else if (result.unchanged) {
                                mostrarToast(result.message || 'Sin modificaciones', 'info');
                                Modal.close('crudModal');
                            } else if (result.message) {
                                mostrarToast(result.message, 'error');
                            }
                        } else {
                            const html = await response.text();
                            document.getElementById('modalContent').innerHTML = html;
                        }
                    } else {
                        const html = await response.text();
                        document.getElementById('modalContent').innerHTML = html;
                    }
                } catch (err) {
                    console.error('Error submitting form:', err);
                    alert('Error al guardar. Intente nuevamente.');
                }
            }
        });
        async function loadMovimientoEdit(id) {
            try {
                const response = await fetch(`/Servicios/MovimientosEdit?id=${id}&handler=Modal`);
                const html = await response.text();
                document.getElementById('modalContent').innerHTML = html;
                Modal.open('crudModal');
            } catch (error) { console.error('Error loading movimiento edit:', error); }
        }
        async function loadMovimientoDelete(id) {
            try {
                const response = await fetch(`/Servicios/MovimientosDelete?id=${id}&handler=Modal`);
                const html = await response.text();
                document.getElementById('modalContent').innerHTML = html;
                Modal.open('crudModal');
            } catch (error) { console.error('Error loading movimiento delete:', error); }
        }
        async function loadServicioMovimientos(id) {
            try {
                const response = await fetch(`/Servicios/Movimientos?serviceId=${id}&handler=Modal`);
                const html = await response.text();
                document.getElementById('modalContent').innerHTML = html;
                Modal.open('crudModal');
            } catch (error) {
                console.error('Error loading movements:', error);
                alert('Error al cargar movimientos');
            }
        }

        let timeoutBusqueda;
        function buscarServiciosDinamico(termino) {
            clearTimeout(timeoutBusqueda);
            if (!termino || termino.trim() === '') { mostrarTodasLasFilas(); return; }
            timeoutBusqueda = setTimeout(() => {
                const t = termino.toLowerCase().trim();
                const filas = document.querySelectorAll('tbody tr');
                let count = 0;
                filas.forEach(fila => { const txt = fila.textContent.toLowerCase(); if (txt.includes(t)) { fila.style.display = ''; count++; } else { fila.style.display = 'none'; } });
                mostrarMensajeSinResultados(count === 0);
            }, 300);
        }
        function mostrarTodasLasFilas() { const filas = document.querySelectorAll('tbody tr'); filas.forEach(f => f.style.display = ''); mostrarMensajeSinResultados(false); }
        function mostrarMensajeSinResultados(mostrar) {
            let msg = document.getElementById('sinResultadosBusqueda');
            if (mostrar) {
                if (!msg) {
                    const tbody = document.querySelector('tbody');
                    msg = document.createElement('tr');
                    msg.id = 'sinResultadosBusqueda';
                    msg.innerHTML = `<td colspan="100" class="px-6 py-8 text-center"><div class="flex flex-col items-center"><svg class="h-12 w-12 mb-3" style="color: var(--muted-foreground);" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg><p class="text-sm font-medium" style="color: var(--foreground);">No se encontraron resultados</p><p class="text-xs mt-1" style="color: var(--muted-foreground);">Intenta con otros términos de búsqueda</p></div></td>`;
                    tbody.appendChild(msg);
                }
            } else { if (msg) { msg.remove(); } }
        }
    </script>
}