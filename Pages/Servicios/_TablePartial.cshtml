@model ProyectoSaunaKalixto.Web.Pages.Servicios.IndexModel

<table class="w-full">
    <thead class="border-b" style="border-color: var(--border); background-color: var(--muted);">
        <tr>
            <th class="w-12 px-4 py-3"><input type="checkbox" class="rounded" style="border-color: var(--border);"></th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider" style="color: var(--muted-foreground);">Servicio</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider" style="color: var(--muted-foreground);">Categor√≠a</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider" style="color: var(--muted-foreground);">Precio</th>
            <th class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider" style="color: var(--muted-foreground);">Acciones</th>
        </tr>
    </thead>
    <tbody class="divide-y" style="border-color: var(--border);">
        @if (!Model.Servicios.Any())
        {
            <tr>
                <td colspan="5" class="px-6 py-8 text-center">
                    @if (Model.ShowInactive)
                    {
                        <span style="color: var(--muted-foreground);">No hay servicios inactivos</span>
                    }
                    else
                    {
                        <span style="color: var(--muted-foreground);">No hay servicios activos</span>
                    }
                </td>
            </tr>
        }
        else
        {
            @foreach (var s in Model.Servicios)
            {
                <tr class="hover:bg-muted/50 transition-colors" onclick="loadServicioMovimientos('@s.IdServicio')">
                    <td class="px-4 py-4"><input type="checkbox" class="rounded" style="border-color: var(--border);"></td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 h-8 w-8 rounded-full flex items-center justify-center text-xs font-medium text-white" style="background-color: var(--primary);">
                                @s.Nombre.Substring(0, 1).ToUpper()
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium" style="color: var(--foreground);">@s.Nombre</p>
                                <p class="text-xs" style="color: var(--muted-foreground);">@(s.Activo ? "Activo" : "Inactivo")</p>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap"><p class="text-sm" style="color: var(--foreground);">@(s.CategoriaServicio?.Nombre ?? "-")</p></td>
                    <td class="px-6 py-4 whitespace-nowrap"><p class="text-sm" style="color: var(--foreground);">@s.Precio.ToString("0.00")</p></td>
                    <td class="px-6 py-4 whitespace-nowrap text-right">
                        <div class="flex items-center justify-end space-x-2">
                            <form method="post" asp-page-handler="ToggleActivo" class="inline" onclick="event.stopPropagation();">
                                <input type="hidden" name="id" value="@s.IdServicio" />
                                <button type="submit" class="inline-flex items-center p-1.5 rounded hover:bg-red-50 transition-colors text-red-600" title="@(s.Activo ? "Desactivar" : "Activar")">
                                    @if (s.Activo)
                                    {
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    }
                                </button>
                            </form>
                            <button type="button" onclick="event.stopPropagation(); loadEditServicioForm('@s.IdServicio')" class="inline-flex items-center p-1.5 rounded hover:bg-muted transition-colors" style="color: var(--muted-foreground);" title="Editar">
                                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                            </button>
                            <button type="button" onclick="event.stopPropagation(); loadServicioMovimientos('@s.IdServicio')" class="inline-flex items-center p-1.5 rounded hover:bg-muted transition-colors" style="color: var(--muted-foreground);" title="Movimientos">
                                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3v7h7M21 21v-7h-7M7 17l-4 4m0 0h6m-6 0v-6M17 7l4-4m0 0h-6m6 0v6" />
                                </svg>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>