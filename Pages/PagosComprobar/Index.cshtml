// Serie autom√°tica
(function(){
  const seriesPorTipo = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.SeriesPorTipo));
  const tipoSel = document.getElementById('tipoComprobante');
  const serieInput = document.getElementById('serieComprobante');
  function updateSerie(){
    const opt = tipoSel.options[tipoSel.selectedIndex];
    const nombre = opt ? opt.text : '';
    const serie = seriesPorTipo[nombre] || serieInput.value || 'B001';
    serieInput.value = serie;
  }
  if(tipoSel && serieInput){
    tipoSel.addEventListener('change', updateSerie);
    updateSerie();
  }
})();

// Submit form
