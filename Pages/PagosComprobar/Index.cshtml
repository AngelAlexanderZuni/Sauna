}

async function procesarPago() {
    if (!formData) return;
    closeConfirmModal();
    
    const btn = document.getElementById('btnConfirmar');
    const originalText = btn.innerHTML;
    btn.disabled = true;
    btn.textContent = 'Procesando...';
    
    try {
        const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
        const token = tokenInput ? tokenInput.value : '';
        const res = await fetch('?handler=RegistrarPagoComprobante', { 
            method: 'POST', 
            body: formData,
            credentials: 'same-origin',
            headers: { 'X-Requested-With': 'XMLHttpRequest', 'Accept':'application/json', 'RequestVerificationToken': token }
        });
        const data = await res.json();
        
        if (data.success) {
            const comp = data.comprobante;
            document.getElementById('comprobanteInfo').textContent = 
                `Comprobante ${comp.serie || 'N/A'}-${comp.numero || 'N/A'} generado exitosamente`;
            lastComprobante = comp;
            
            document.getElementById('modalSuccess').style.display = 'flex';
            showToast('success', 'Transacci√≥n completada exitosamente');
        } else {
            showToast('error', data.message || 'Error al procesar la transacci√≥n');
            btn.disabled = false;
            btn.innerHTML = originalText;
        }
    } catch (err) {
        showToast('error', 'Error de conexi√≥n con el servidor');
        btn.disabled = false;
        btn.innerHTML = originalText;
    }
}

function continuarSinImprimir() {
