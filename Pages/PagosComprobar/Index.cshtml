@page
@model ProyectoSaunaKalixto.Web.Pages.PagosComprobar.IndexModel
@{
    ViewData["Title"] = "Procesamiento de Pagos";
    Layout = "_LayoutSidebar";
}

<!-- Breadcrumb Navigation -->
<nav class="breadcrumb-nav" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/CuentasConsumos">Cuentas</a></li>
        <li class="breadcrumb-item active" aria-current="page">Procesamiento de Pagos</li>
    </ol>
</nav>

<!-- Page Header -->
<div class="enterprise-header">
    <div class="header-content">
        <div class="header-title-group">
            <div class="icon-wrapper">
                <svg class="header-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
            </div>
            <div>
                <h1 class="enterprise-title">Procesamiento de Pagos y Comprobantes</h1>
                <p class="enterprise-subtitle">
                    <span class="client-name">@Model.ClienteNombreCompleto</span>
                    <span class="divider-dot">‚Ä¢</span>
                    <span>Cuenta #@Model.cuentaId</span>
                    @if(!string.IsNullOrWhiteSpace(Model.ClienteNumeroDocumento)){
                        <span class="divider-dot">‚Ä¢</span>
                        <span class="client-doc">DNI @Model.ClienteNumeroDocumento</span>
                    }
                    <span class="divider-dot">‚Ä¢</span>
                    <span>@DateTime.Now.ToString("dddd, dd MMMM yyyy")</span>
                </p>
            </div>
        </div>
        @{ 
            var totalPagado = Model.Pagos.Sum(p => p.Monto);
            var totalMostrar = Model.TotalMostrar;
            var montoPendiente = totalMostrar - totalPagado;
            if (montoPendiente < 0) montoPendiente = 0;
            var progreso = totalMostrar > 0 ? (int)Math.Round((totalPagado / totalMostrar) * 100M, 0) : 0;
        }
        <div class="status-pills">
            @if(montoPendiente <= 0)
            {
                <span class="pill pill-success">
                    <svg class="pill-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Pagado
                </span>
            }
            else if(totalPagado > 0)
            {
                <span class="pill pill-warning">
                    <svg class="pill-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Pago Parcial
                </span>
            }
            else
            {
                <span class="pill pill-danger">
                    <svg class="pill-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Pendiente
                </span>
            }
            @if(Model.Comprobantes.Any())
            {
                <span class="pill pill-info">
                    <svg class="pill-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    Comprobante Emitido
                </span>
            }
        </div>
    </div>
</div>

<!-- Main Content Grid -->
<div class="enterprise-layout">
    
    <!-- Left Panel - Account Details -->
    <div class="content-panel">
        
        <!-- Financial Summary Card -->
        <div class="summary-card">
            <div class="summary-header">
                <h2 class="summary-title">Resumen Financiero</h2>
                <div class="progress-indicator">
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: @progreso%"></div>
                    </div>
                    <span class="progress-text">@progreso% Pagado</span>
                </div>
            </div>
            
            <div class="summary-body">
                <div class="metric-grid">
                    <div class="metric">
                        <span class="metric-label">Subtotal Servicios</span>
                        <span class="metric-value">S/ @Model.Cuenta?.SubtotalServicios.ToString("N2")</span>
                    </div>
                    <div class="metric">
                        <span class="metric-label">Subtotal Productos</span>
                        <span class="metric-value">S/ @Model.Cuenta?.SubtotalProductos.ToString("N2")</span>
                    </div>
                    @if(Model.DescuentoAplicado > 0 && string.IsNullOrEmpty(Model.Cuenta?.PromocionNombre))
                    {
                        <div class="metric metric-discount">
                            <span class="metric-label">Descuento Aplicado</span>
                            <span class="metric-value">-S/ @Model.DescuentoAplicado.ToString("N2")</span>
                        </div>
                    }
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Cuenta?.PromocionNombre))
                {
                    <div class="promotion-banner">
                        <div class="promotion-icon">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                            </svg>
                        </div>
                        <div class="promotion-content">
                            <span class="promotion-name">@Model.Cuenta?.PromocionNombre</span>
                            <span class="promotion-amount">-S/ @((Model.Cuenta?.PromocionMontoDescuento ?? 0M).ToString("N2"))</span>
                        </div>
                    </div>
                }
                
                <div class="divider"></div>
                
                <div class="total-section">
                    <div class="total-row">
                        <span>Base Imponible</span>
                        <span>S/ @Model.BaseImponible.ToString("N2")</span>
                    </div>
                    <div class="total-row">
                        <span>IGV (@(Model.IgvRate.ToString("P0")))</span>
                        <span>S/ @Model.IgvMonto.ToString("N2")</span>
                    </div>
                    <div class="total-row total-final">
                        <span>Total General</span>
                        <span>S/ @Model.TotalMostrar.ToString("N2")</span>
                    </div>
                </div>
                
                @if(totalPagado > 0 || montoPendiente > 0)
                {
                    <div class="payment-breakdown">
                        <div class="breakdown-row paid">
                            <div class="breakdown-label">
                                <svg class="breakdown-icon" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                </svg>
                                <span>Total Pagado</span>
                            </div>
                            <span class="breakdown-amount">S/ @totalPagado.ToString("N2")</span>
                        </div>
                        @if(montoPendiente > 0)
                        {
                            <div class="breakdown-row pending">
                                <div class="breakdown-label">
                                    <svg class="breakdown-icon" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                    </svg>
                                    <span>Saldo Pendiente</span>
                                </div>
                                <span class="breakdown-amount">S/ @montoPendiente.ToString("N2")</span>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
        
        <!-- Services & Products Accordion -->
        <div class="accordion">
            <div class="accordion-item">
                <div class="accordion-header">
                    <div class="accordion-title">
                        <svg class="accordion-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                        </svg>
                        <span>Servicios Consumidos</span>
                        <span class="badge">@Model.ServiciosDetalle.Count()</span>
                    </div>
                    <svg class="chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                </div>
                <div class="accordion-content">
                    <div class="data-table-wrapper">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>Descripci√≥n</th>
                                    <th class="text-center">Cant.</th>
                                    <th class="text-right">Precio Unit.</th>
                                    <th class="text-right">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if(Model.ServiciosDetalle.Any()){
                                    @foreach(var s in Model.ServiciosDetalle){
                                        <tr>
                                            <td class="cell-strong">@s.ServicioNombre</td>
                                            <td class="text-center">@s.Cantidad</td>
                                            <td class="text-right">S/ @s.PrecioUnitario.ToString("N2")</td>
                                            <td class="text-right cell-strong">S/ @s.Subtotal.ToString("N2")</td>
                                        </tr>
                                    }
                                } else {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted">Sin servicios registrados</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <div class="accordion-item">
                <div class="accordion-header">
                    <div class="accordion-title">
                        <svg class="accordion-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                        </svg>
                        <span>Productos Consumidos</span>
                        <span class="badge">@Model.ProductosDetalle.Count()</span>
                    </div>
                    <svg class="chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                </div>
                <div class="accordion-content">
                    <div class="data-table-wrapper">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>SKU</th>
                                    <th class="text-center">Cant.</th>
                                    <th class="text-right">Precio</th>
                                    <th class="text-right">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if(Model.ProductosDetalle.Any()){
                                    @foreach(var p in Model.ProductosDetalle){
                                        <tr>
                                            <td class="cell-strong">@p.ProductoNombre</td>
                                            <td><span class="sku-badge">@p.ProductoCodigo</span></td>
                                            <td class="text-center">@p.Cantidad</td>
                                            <td class="text-right">S/ @p.PrecioUnitario.ToString("N2")</td>
                                            <td class="text-right cell-strong">S/ @p.Subtotal.ToString("N2")</td>
                                        </tr>
                                    }
                                } else {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">Sin productos registrados</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Transaction History -->
        <div class="history-section">
            <div class="section-header">
                <h3 class="section-title">Historial de Transacciones</h3>
            </div>
            
            <div class="timeline-container">
                @if(Model.Pagos.Any() || Model.Comprobantes.Any())
                {
                    var eventos = new List<dynamic>();
                    foreach(var p in Model.Pagos)
                    {
                        eventos.Add(new { Fecha = p.FechaHora, Tipo = "Pago", Objeto = p });
                    }
                    foreach(var c in Model.Comprobantes)
                    {
                        eventos.Add(new { Fecha = c.FechaEmision, Tipo = "Comprobante", Objeto = c });
                    }
                    var eventosOrdenados = eventos.OrderByDescending(e => e.Fecha);
                    
                    @foreach(var evento in eventosOrdenados)
                    {
                        @if(evento.Tipo == "Pago")
                        {
                            var p = evento.Objeto as ProyectoSaunaKalixto.Web.Domain.DTOs.PagoDto;
                            <div class="timeline-event">
                                <div class="event-marker payment"></div>
                                <div class="event-card">
                                    <div class="event-header">
                                        <div class="event-title-group">
                                            <svg class="event-icon payment" fill="currentColor" viewBox="0 0 20 20">
                                                <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z"/>
                                                <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd"/>
                                            </svg>
                                            <div>
                                                <span class="event-title">Pago Registrado</span>
                                                <span class="event-meta">@p.MetodoNombre</span>
                                            </div>
                                        </div>
                                        <span class="event-amount payment">S/ @p.Monto.ToString("N2")</span>
                                    </div>
                                    <div class="event-details">
                                        <span class="event-date">@p.FechaHora.ToString("dd MMM yyyy, HH:mm")</span>
                                        @if(!string.IsNullOrEmpty(p.NumeroReferencia))
                                        {
                                            <span class="event-ref">Ref: @p.NumeroReferencia</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            var c = evento.Objeto as ProyectoSaunaKalixto.Web.Domain.DTOs.ComprobanteDto;
                            <div class="timeline-event">
                                <div class="event-marker document"></div>
                                <div class="event-card">
                                    <div class="event-header">
                                        <div class="event-title-group">
                                            <svg class="event-icon document" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
                                            </svg>
                                            <div>
                                                <span class="event-title">Comprobante Emitido</span>
                                                <span class="event-meta">@c.TipoNombre @c.Serie-@c.Numero</span>
                                            </div>
                                        </div>
                                        <span class="event-amount document">S/ @c.Total.ToString("N2")</span>
                                    </div>
                                    <div class="event-details">
                                        <span class="event-date">@c.FechaEmision.ToString("dd MMM yyyy, HH:mm")</span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
                else
                {
                    <div class="empty-timeline">
                        <svg class="empty-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                        </svg>
                        <p class="empty-text">Sin transacciones registradas</p>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <!-- Right Panel - Payment Processing -->
    <div class="action-panel">
        <div class="payment-wizard">
            <div class="wizard-header">
                <h2 class="wizard-title">Procesar Transacci√≥n</h2>
                <p class="wizard-subtitle">Complete los siguientes pasos para procesar el pago</p>
            </div>
            
            <form id="formPagoComp">
                <input type="hidden" name="idCuenta" value="@Model.cuentaId" />
                @Html.AntiForgeryToken()
                
                <!-- Step 1: Cliente -->
                <div class="wizard-step">
                    <div class="step-header">
                        <div class="step-number">1</div>
                        <h3 class="step-title">Informaci√≥n del Cliente</h3>
                    </div>
                    
                    <div class="form-grid">
                        <div class="form-field">
                            <label class="field-label">Tipo de Documento</label>
                            <select name="tipoDocumento" id="tipoDoc" class="field-input" required>
                                <option value="DNI">DNI</option>
                                <option value="RUC">RUC</option>
                                <option value="CE">Carnet de Extranjer√≠a</option>
                                <option value="OTRO">Otro</option>
                            </select>
                        </div>
                        
                        <div class="form-field">
                            <label class="field-label">N√∫mero de Documento</label>
                            <input type="text" name="numeroDocumento" id="numDoc" class="field-input" 
                                   placeholder="Ingrese el n√∫mero" value="@Model.ClienteNumeroDocumento" required />
                        </div>
                        
                        <div class="form-field full-width">
                            <label class="field-label">Nombre Completo / Raz√≥n Social</label>
                            <input type="text" name="nombreCliente" id="nombreCli" class="field-input" 
                                   placeholder="Ingrese el nombre completo" value="@Model.ClienteNombreCompleto" required />
                        </div>
                        
                        <div class="form-field full-width" id="direccionGroup" style="display:none;">
                            <label class="field-label">Direcci√≥n Fiscal <span class="field-required">*</span></label>
                            <input type="text" name="direccion" id="direccionFiscal" class="field-input" 
                                   placeholder="Ingrese la direcci√≥n fiscal completa" />
                        </div>
                    </div>
                </div>
                
                <!-- Step 2: Pago -->
                <div class="wizard-step">
                    <div class="step-header">
                        <div class="step-number">2</div>
                        <h3 class="step-title">Detalles del Pago</h3>
                    </div>
                    
                    <div class="form-grid">
                        <div class="form-field">
                            <label class="field-label">M√©todo de Pago</label>
                            <select name="idMetodoPago" id="metodoPago" class="field-input" required>
                                @foreach(var m in Model.Metodos){
                                    <option value="@m.IdMetodoPago">@m.Nombre</option>
                                }
                            </select>
                        </div>
                        
                        <div class="form-field">
                            <label class="field-label">Monto a Pagar</label>
                            <div class="input-currency">
                                <span class="currency-symbol">S/</span>
                                <input type="number" step="0.01" name="monto" id="montoPago" class="field-input-currency" 
                                       value="@Model.TotalMostrar.ToString("F2")" max="@Model.TotalMostrar.ToString("F2")" required />
                            </div>
                            <small class="field-hint">M√°ximo: S/ @Model.TotalMostrar.ToString("N2")</small>
                        </div>
                        
                        <div class="form-field full-width" id="vueltoGroup" style="display:none;">
                            <label class="field-label">Monto Recibido (Efectivo)</label>
                            <div class="input-currency">
                                <span class="currency-symbol">S/</span>
                                <input type="number" step="0.01" id="montoRecibido" class="field-input-currency" 
                                       placeholder="0.00" />
                            </div>
                        </div>
                        
                        <div class="vuelto-alert" id="vueltoDisplay" style="display:none;">
                            <div class="alert-icon">üí∞</div>
                            <div class="alert-content">
                                <span class="alert-label">Vuelto a entregar</span>
                                <span class="alert-amount" id="vueltoAmount">S/ 0.00</span>
                            </div>
                        </div>
                        
                        <div class="form-field full-width">
                            <label class="field-label">N√∫mero de Referencia <span class="field-optional">(Opcional)</span></label>
                            <input type="text" name="referencia" class="field-input" 
                                   placeholder="Ej: OP-2024-123456" />
                        </div>
                    </div>
                </div>
                
                <!-- Step 3: Comprobante -->
                <div class="wizard-step">
                    <div class="step-header">
                        <div class="step-number">3</div>
                        <h3 class="step-title">Comprobante de Pago</h3>
                    </div>
                    
                    <div class="form-grid">
                        <div class="form-field">
                            <label class="field-label">Tipo de Comprobante</label>
                            <select name="idTipoComprobante" id="tipoComprobante" class="field-input" required>
                                @foreach(var t in Model.TiposComprobante){
                                    <option value="@t.IdTipoComprobante">@t.Nombre</option>
                                }
                            </select>
                        </div>
                        
                        <div class="form-field">
                            <label class="field-label">Serie</label>
                            <input type="text" name="serie" id="serieComprobante" class="field-input" 
                                   value="B001" required />
                        </div>
                    </div>
                </div>
                
                <!-- Action Buttons -->
                <div class="wizard-actions">
                    <button type="button" class="btn btn-outline" onclick="history.back()">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                        </svg>
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary" id="btnConfirmar">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        Procesar Pago
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal de Confirmaci√≥n -->
<div class="modal-backdrop" id="modalConfirm" style="display:none;">
    <div class="modal-enterprise">
        <div class="modal-header">
            <div class="modal-icon-wrapper warning">
                <svg class="modal-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
