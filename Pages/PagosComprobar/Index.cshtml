    direccionGroup.style.display = esRuc ? 'block' : 'none';
    direccionInput.required = esRuc;
});

// Calculadora de vuelto
document.getElementById('metodoPago').addEventListener('change', function() {
    const vueltoGroup = document.getElementById('vueltoGroup');
    const select = this;
    const textoMetodo = select.options[select.selectedIndex].text;
    const metodosEfectivo = ['Efectivo', 'efectivo'];
    vueltoGroup.style.display = metodosEfectivo.includes(textoMetodo) ? 'block' : 'none';
});

document.getElementById('montoRecibido')?.addEventListener('input', function() {
    const montoPago = parseFloat(document.getElementById('montoPago').value) || 0;
    const recibido = parseFloat(this.value) || 0;
    const vuelto = recibido - montoPago;
    const display = document.getElementById('vueltoDisplay');
    const amount = document.getElementById('vueltoAmount');
    if (vuelto > 0) {
