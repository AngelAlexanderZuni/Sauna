@model ProyectoSaunaKalixto.Web.Pages.Egresos.IndexModel
@{
    var egreso = Model.EgresoEnEdicion;
    if (egreso == null)
    {
        <div class="p-6">
            <div class="text-center mb-4">
                <svg class="h-16 w-16 mx-auto text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <p class="text-red-600 font-semibold text-center mb-2">Error: No se pudo cargar el egreso</p>
            <p class="text-sm text-gray-600 text-center">
                El egreso no est치 disponible en el modelo
            </p>
        </div>
        return;
    }
}

@Html.AntiForgeryToken()

<!-- Modal Header -->
<div class="modal-header border-b" style="border-color: var(--border);">
    <div class="flex items-center justify-between px-6 py-4">
        <div class="flex items-center gap-3">
            <div class="h-10 w-10 rounded-full flex items-center justify-center" style="background-color: oklch(from var(--chart-2) l c h / 0.1);">
                <svg class="h-5 w-5" style="color: var(--chart-2);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
            </div>
            <div>
                <h2 class="text-lg font-semibold" style="color: var(--foreground);">Editar Egreso</h2>
                <p class="text-sm" style="color: var(--muted-foreground);">ID: @egreso.IdCabEgreso</p>
            </div>
        </div>
        <button type="button" onclick="Modal.close('crudModal')" 
                class="p-2 rounded-md transition-all hover:bg-muted/50">
            <svg class="h-5 w-5" style="color: var(--muted-foreground);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
    </div>
</div>

<!-- Modal Body -->
<div class="modal-body px-6 py-6 space-y-6">
    <input type="hidden" id="idCabEgresoEdit" value="@egreso.IdCabEgreso" />
    
    <!-- Fecha -->
    <div>
        <label class="block text-sm font-medium mb-2" style="color: var(--foreground);">
            Fecha y Hora <span style="color: var(--destructive);">*</span>
        </label>
        <div class="relative">
            <input type="datetime-local" 
                   id="fechaEgresoEdit"
                   value="@egreso.Fecha.ToString("yyyy-MM-ddTHH:mm")"
                   class="w-full px-4 py-2.5 text-sm border rounded-md focus:outline-none focus:ring-2 transition-all" 
                   style="border-color: var(--border); background-color: var(--background); color: var(--foreground); --tw-ring-color: var(--chart-2);"
                   required />
        </div>
    </div>

    <!-- Total calculado -->
    <div class="p-4 rounded-lg" style="background-color: oklch(from var(--chart-2) l c h / 0.05); border: 2px solid oklch(from var(--chart-2) l c h / 0.2);">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-2">
                <svg class="h-5 w-5" style="color: var(--chart-2);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-sm font-medium" style="color: var(--foreground);">Total del Egreso</span>
            </div>
            <span id="totalDisplay" class="text-2xl font-bold" style="color: var(--chart-2);">S/ @egreso.MontoTotal.ToString("N2")</span>
        </div>
    </div>

    <!-- Detalles -->
    <div>
        <div class="flex items-center justify-between mb-4">
            <label class="block text-sm font-medium" style="color: var(--foreground);">
                Conceptos de Gastos <span style="color: var(--destructive);">*</span>
            </label>
            <button type="button" onclick="agregarDetalle()" 
                    class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-md transition-all hover:opacity-90 shadow-sm" 
                    style="background-color: var(--chart-2); color: var(--primary-foreground);">
                <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Agregar
            </button>
        </div>

        <div id="detallesContainer" class="space-y-3 max-h-96 overflow-y-auto pr-2">
            @foreach (var detalle in egreso.Detalles)
            {
                <div class="detalle-item p-4 border rounded-lg relative transition-all hover:shadow-sm" 
                     style="background-color: var(--background); border-color: var(--border);">
                    <button type="button" onclick="eliminarDetalle(this)" 
                            class="absolute top-3 right-3 p-1.5 rounded-md transition-all"
                            style="background-color: oklch(from var(--destructive) l c h / 0.1); color: var(--destructive);">
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pr-10">
                        <div class="md:col-span-2">
                            <label class="block text-xs font-medium mb-1.5" style="color: var(--foreground);">Concepto *</label>
                            <input type="text" class="concepto w-full px-3 py-2 text-sm border rounded-md focus:outline-none focus:ring-2 transition-all" 
                                   style="border-color: var(--border); background-color: var(--background); color: var(--foreground); --tw-ring-color: var(--chart-2);"
                                   value="@detalle.Concepto"
                                   placeholder="Ej: Pago de servicios b치sicos" required />
                        </div>
                        <div>
                            <label class="block text-xs font-medium mb-1.5" style="color: var(--foreground);">Tipo de Egreso *</label>
                            <select class="tipoEgreso w-full px-3 py-2 text-sm border rounded-md focus:outline-none focus:ring-2 transition-all" 
                                    style="border-color: var(--border); background-color: var(--background); color: var(--foreground); --tw-ring-color: var(--chart-2);"
                                    required>
                                <option value="">Seleccionar tipo...</option>
                                @foreach (var tipo in Model.TiposEgreso)
                                {
                                    <option value="@tipo.IdTipoEgreso" selected="@(tipo.IdTipoEgreso == detalle.IdTipoEgreso)">
                                        @tipo.Nombre
                                    </option>
                                }
                            </select>
                        </div>
                        <div>
                            <label class="block text-xs font-medium mb-1.5" style="color: var(--foreground);">Monto (S/) *</label>
                            <input type="number" class="monto w-full px-3 py-2 text-sm border rounded-md focus:outline-none focus:ring-2 transition-all" 
                                   style="border-color: var(--border); background-color: var(--background); color: var(--foreground); --tw-ring-color: var(--chart-2);"
                                   value="@detalle.Monto"
                                   min="0.01" step="0.01" placeholder="0.00" onchange="calcularTotal()" required />
                        </div>
                        <div class="md:col-span-2">
                            <label class="block text-xs font-medium mb-1.5" style="color: var(--foreground);">Comprobante / Referencia</label>
                            <div class="flex gap-2">
                                <input type="text" class="comprobante w-full px-3 py-2 text-sm border rounded-md focus:outline-none focus:ring-2 transition-all" 
                                       style="border-color: var(--border); background-color: var(--background); color: var(--foreground); --tw-ring-color: var(--chart-2);"
                                       value="@detalle.ComprobanteRuta"
                                       maxlength="255" placeholder="Ej: Factura #001-0012345 o suba un archivo" />
                                <input type="file" class="archivoComprobante hidden" accept=".pdf,.jpg,.jpeg,.png" />
                                <button type="button" onclick="seleccionarArchivo(this)" 
                                        class="px-3 py-2 text-xs font-medium rounded-md border transition-all hover:bg-muted/50 whitespace-nowrap"
                                        style="border-color: var(--border); color: var(--foreground);"
                                        title="Subir archivo PDF o imagen">
                                    <svg class="h-4 w-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                                    </svg>
                                    Archivo
                                </button>
                            </div>
                            <p class="text-xs mt-1" style="color: var(--muted-foreground);">Ingrese texto o suba un archivo (PDF, JPG, PNG, m치x 5MB)</p>
                        </div>
                        <div class="md:col-span-2 flex items-center space-x-2">
                            <input type="checkbox" class="recurrente h-4 w-4 rounded border transition-all" 
                                   style="border-color: var(--input); color: var(--chart-2);" 
                                   checked="@detalle.Recurrente" />
                            <label class="text-xs" style="color: var(--foreground);">
                                Es un gasto recurrente (se repite peri칩dicamente)
                            </label>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <p class="text-xs flex items-center gap-1" style="color: var(--muted-foreground);">
        <svg class="h-3 w-3" style="color: var(--destructive);" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
        </svg>
        Los campos marcados con * son obligatorios
    </p>
</div>

<!-- Modal Footer -->
<div class="modal-footer border-t px-6 py-4" style="border-color: var(--border);">
    <div class="flex justify-end gap-3">
        <button type="button" onclick="Modal.close('crudModal')" 
                class="px-6 py-2.5 text-sm font-medium rounded-md border transition-all hover:bg-muted/50" 
                style="border-color: var(--border); color: var(--foreground);">
            Cancelar
        </button>
        <button type="button" onclick="actualizarEgreso()" 
                id="btnActualizarEgreso"
                class="inline-flex items-center px-6 py-2.5 text-sm font-medium rounded-md transition-all hover:opacity-90 shadow-sm" 
                style="background-color: var(--chart-2); color: var(--primary-foreground);">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Guardar Cambios
        </button>
    </div>
</div>
